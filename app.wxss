/**app.wxss**/
page {
    font-size: 32rpx;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.title {
    background-color: lightgreen;
    text-align: center;
    padding: 20rpx 0;
    margin-bottom: 50rpx;
}
.btns {
    margin: 50rpx;
}
.btns button {
    margin-bottom: 50rpx;
}
.circle-txt{
  position: absolute;
  width: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f44;
  font-size: 24rpx;
}